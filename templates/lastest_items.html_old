<html>
	<body>
		Categories
		<br>
		<br>
		
		{% with messages = get_flashed_messages() %}
			{%if messages: %}
				<ul>
					{%for message in messages%}
					
						<li><strong>{{message}}</strong></li>
					
					{%endfor%}
				
				</ul>
			{%endif%}
		{%endwith%}
		
		{%for category in categories %}
		
		<a href="{{url_for('getItems', category_title = category.title)}}">{{ category.title }}</a>
		<br>		
		{% endfor%}

		<br>
		<br>
		<a href = "{{url_for('add_item')}}">Add Item</a>
		<br>
		<br>
		Lastest Items
		<br>
		<br>
		{%for item in items %}
		{{item.title}}
		<br>
		{%endfor%}

	</body>
</html>
